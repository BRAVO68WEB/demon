{
    "private": true,
    "name": "demon-api",
    "version": "1.0.0",
    "description": "A base template from create-demon-app",
    "license": "ISC",
    "author": "",
    "repository": "",
    "type": "module",
    "main": "index.ts",
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "dev": "concurrently \"npm run dev:express\" \"npm run dev:hasura\"",
        "dev:express": "cross-env NODE_ENV=development nodemon -x node --no-warnings --experimental-specifier-resolution=node --loader ts-node/esm index.ts --signal SIGKILL --ignore node_modules",
        "dev:hasura": "cd hasura && hasura --skip-update-check  --envfile ../.env console",
        "fetch:db": "bash bin/fetch-db-schema.sh",
        "fetch:schemas": "bash bin/fetch-gql-schema.sh",
        "generate:types:gql": "graphql-codegen --config codegen.yml",
        "prepare": "node --es-module-specifier-resolution=node --loader @esbuild-kit/esm-loader scripts/prepare.ts",
        "start": "node --es-module-specifier-resolution=node --loader ts-node/esm ./build/index.js",
        "watch": "tsc -w"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.359.0",
        "axios": "^1.2.1",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-rate-limit": "^6.7.0",
        "form-data": "^4.0.0",
        "graphql": "^16.6.0",
        "graphql-request": "^6.1.0",
        "helmet": "^7.0.0",
        "joi": "^17.7.0",
        "jsonwebtoken": "^9.0.0",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "multer-s3": "^3.0.1",
        "napi-nanoid": "^0.2.0",
        "node-cache": "^5.1.2",
        "nodemailer": "^6.8.0",
        "redis": "^4.6.7",
        "sanitize-filename": "^1.6.3",
        "sharp": "^0.32.1",
        "shelljs": "^0.8.5",
        "winston": "^3.9.0",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@esbuild-kit/esm-loader": "^2.5.5",
        "@graphql-codegen/cli": "^4.0.1",
        "@graphql-codegen/typescript": "^4.0.0",
        "@graphql-codegen/typescript-operations": "^4.0.0",
        "@oclif/core": "^2.8.7",
        "@oclif/help": "^1.0.8",
        "@swc/core": "^1.3.60",
        "@swc/wasm": "^1.3.62",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.14",
        "@types/inquirer": "^9.0.3",
        "@types/morgan": "^1.9.3",
        "@types/multer": "^1.4.7",
        "@types/shelljs": "^0.8.12",
        "@typescript-eslint/eslint-plugin": "^5.59.9",
        "@typescript-eslint/parser": "^5.59.8",
        "concurrently": "^8.2.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.43.0",
        "eslint-config-prettier": "^8.7.0",
        "graphqurl": "^1.0.1",
        "hasura-cli": "^2.15.1",
        "husky": "^8.0.3",
        "lint-staged": "^13.1.2",
        "nodemon": "^2.0.22",
        "prettier": "^2.8.2",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.3"
    }
}
